---
import Layout from '../layouts/Layout.astro';
---

<Layout>

  
  <header class="absolute top-0 left-0 w-full z-20">
  <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
    
    <h1 class="text-3xl font-bold text-white">Padhik</h1>

    
    <nav class="space-x-6 text-white text-lg font-medium flex items-center">
      <a href="#about" class="hover:text-purple-300 transition">About Us</a>
      <a href="#contact" class="hover:text-purple-300 transition">Contact Us</a>
      <a href="./login" class="hover:text-purple-300 transition">Login</a>
      <a href="./signup" class="bg-white text-purple-700 px-4 py-2 rounded-lg hover:bg-purple-100 transition">Sign Up</a>
    </nav>
  </div>
</header>

  
  <div class="relative min-h-screen bg-cover bg-center bg-no-repeat" style="background-image: url('https://images.unsplash.com/photo-1513258496099-48168024aec0?auto=format&fit=crop&w=1470&q=80');">
    <div class="absolute inset-0 bg-black/40 backdrop-blur-md"></div>

    
    <div class="relative z-10 flex flex-col items-center justify-center text-center text-white min-h-screen px-6 py-12 space-y-6">
      <div>
        <h1 class="text-4xl font-extrabold mb-2">Padhik</h1>
        <p class="text-xl text-white/90">Excel in your exam today and conquer your career tomorrow</p>
      </div>

      
      <div class="flex flex-col md:flex-row gap-6 mt-6 w-full max-w-4xl">
        <a href="./exam">
        <div class="flex-1 bg-white/90 text-black rounded-2xl p-6 shadow-lg backdrop-blur-sm hover:scale-105 transition">
          <h2 class="text-3xl font-semibold mb-2 flex items-center justify-center flex-col">
            Exam AI
            <img
              src="https://th.bing.com/th/id/OIP.SrEQx_xzVSpbflkXh2wiiwHaHa?w=190&h=191&c=7&r=0&o=5&dpr=1.3&pid=1.7"
              alt="Exam AI"
              class="mt-3 w-40 h-40 rounded-lg"
            />
          </h2>
          <p class="text-base text-gray-700">
            Smarter Prep. Better Scores.<br />
            Your AI-powered study buddy for faster learning, personalized practice, and exam success.
          </p>
        </div>
        </a>
        <a href="./career">
        <div class="flex-1 bg-white/90 text-black rounded-2xl p-6 shadow-lg backdrop-blur-sm hover:scale-105 transition">
          <h2 class="text-3xl font-semibold mb-2 flex items-center justify-center flex-col">
            Career Navigator
            <img
              src="https://th.bing.com/th/id/OIP.fF9AO1JJ6G0mEI8y1DTlDwHaFy?w=222&h=180&c=7&r=0&o=7&dpr=1.3&pid=1.7&rm=3"
              alt="Career Navigator"
              class="mt-3 w-40 h-40 rounded-lg"
            />
          </h2>
          <p class="text-base text-gray-700">
            Find Your Path. Shape Your Future.<br />
            Discover careers that match your passion, get guided roadmaps, and take confident steps toward your dream job.
          </p>
        </div>
</a>
      </div>
    </div>
  </div>

  <!-- About Us & Contact Section -->
  <section class="bg-purple-50 text-gray-900 py-24 px-6" id="about">
    <div class="max-w-6xl mx-auto space-y-24">

      <!-- About Us -->
      <div class="text-center">
        <h2 class="text-4xl font-bold mb-6 text-purple-700">About Us</h2>
        <p class="max-w-4xl mx-auto text-xl text-gray-700 leading-relaxed">
          Padhekand is a smart, AI-powered study platform created to help students succeed with ease.
          We combine technology and education to create accessible, engaging, and personalized learning experiences.
        </p>
      </div>

      <!-- Contact -->
      <div class="text-center" id="contact">
        <h2 class="text-4xl font-bold mb-6 text-purple-700">Contact Us</h2>
        <p class="text-xl text-gray-700 mb-4">
          Have any questions or feedback? We'd love to hear from you!
        </p>
        <p class="text-lg text-blue-700 font-medium">Email: support@padhekand.com</p>
        <p class="text-lg text-blue-700 font-medium">Phone: +91-9876543210</p>
      </div>

    </div>
  </section>

</Layout>
